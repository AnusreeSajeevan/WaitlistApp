<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin20"
    tools:context="com.example.anu.waitlistapp.ui.MainActivity">

    <EditText
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="textPersonName"
        android:id="@+id/et_guest_name"
        android:hint="@string/guest_name_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="number"
        android:id="@+id/et_party_size"
        android:hint="@string/party_size_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:id="@+id/btn_add"
        android:text="@string/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/margin20"
        android:id="@+id/recycler_view_guests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
